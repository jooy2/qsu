{
  "compilerOptions": {
    "baseUrl": "lib",
    "target": "es2020",
    "module": "es2022",
    "lib": [
      "es2020"
    ],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

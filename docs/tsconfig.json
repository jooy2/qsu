{
	"compilerOptions": {
		"target": "esnext",
		"module": "Preserve",
		"moduleDetection": "force",
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"skipLibCheck": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"newLine": "lf"
	},
	"include": ["src/.vitepress/config.mts", "package.json", "eslint.config.ts"],
	"exclude": ["node_modules"]
}
